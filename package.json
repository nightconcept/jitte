{
  "name": "jitte",
  "private": true,
  "version": "0.1.0-alpha.20",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check:all": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "theme:generate": "node theme/parse-schemes.js",
    "theme:list": "node theme/parse-schemes.js --check",
    "fetch-salt-scores": "tsx scripts/fetch-salt-scores.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.47.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.14",
    "@types/jsdom": "^27.0.0",
    "@types/jszip": "^3.4.1",
    "@types/node": "^22.10.5",
    "@vitest/ui": "^4.0.8",
    "jsdom": "^27.1.0",
    "svelte": "^5.41.0",
    "svelte-check": "^4.3.3",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "mana-font": "^1.18.0"
  },
  "pnpm": {
    "overrides": {
      "rollup": "4.52.0"
    }
  }
}
